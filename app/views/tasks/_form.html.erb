<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
<br><br>
  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
<br><br>
<div class="field">
  <h3><%= form.label :deadline, 'Indicate the deadline of your task'  %></h3>
  <%= form.date_field :deadline, placeholder: "Task' deadline" %>
</div>
<br><br>
<div class="field">
<h3><%= form.label :priority, "Select your task' Priority" %></h3>
  <%= form.select :priority,["",'low','medium','high'] %>
</div>
<br><br>
<div class="field">
<h3><%= form.label :status, "Select your task' Status" %></h3>
  <%= form.select :status, ["", 'pending','started','completed']%>
</div>

<div class="field form-group">
     <h3><%= form.label :Create_at %></h3>
  <%= form.datetime_select :deadline,
       use_month_numbers: true,
       start_year: Time.current.year,
       end_year: Time.current.year + 5,
       default: DateTime.now,
       date_separator: '/'
     %>
 </div>



 <div class="form_labels field form-group">
    <%= form.label :label, 'Label to Assign' %><br>

     <div class="row">
      <% @labels.each do |label| %>
      <div class="col m-3 col-lg-2">
          <p>
          <%= form.check_box :label_ids, { multiple: true, checked: @task.labels.find_by(id: label.id).present?,  disabled: label[:disabled], include_hidden: false }, label[:id] %>
          <%=form.label :label_ids, label.name,value:label[:id],style:'text-decoration:none'%>
          </p>
        </div>
     <% end %>
     </div>

 </div>



<br>
  <div class="actions">
    <% if action_name=='new' %>
      <%= form.submit 'Create Task',class:'btn btn-primary' %> ||
      <%= link_to 'Back', tasks_path,class:'btn btn-primary' %>
      <% else %>
      <%= form.submit 'Modify',class:'btn btn-primary' %>
      <% end %>
  </div>
<% end %>
