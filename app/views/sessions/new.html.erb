<div class="container">
    <h2>Log in</h2>
    <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
    <table>
       <tr>
         <td><%= f.label :email, 'email' %></td>
         <td><%= f.email_field :email %></td>
       </tr>
       <tr>
         <td><%= f.label :password, 'password' %></td>
         <td><%= f.password_field :password %></td>
       </tr>
       <tr>
         <td>&nbsp;</td>
         <td><%= f.submit 'Sign in' %></td>
       <tr>
     </table>
   <% end %>
 </div>
