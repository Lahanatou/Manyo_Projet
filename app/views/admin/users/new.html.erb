<div class="container">
    <%= form_with(model: [:admin, @user], local: true) do |f| %>
      <%= render 'errormsg/error', variable: @user %>
      <table>
        <tr>
          <td><%= f.label :name, 'Name' %></td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td><%= f.label :email, 'Email' %></td>
          <td><%= f.email_field :email %></td>
        </tr>
        <tr>
          <td><%= f.label :password, 'Password' %></td>
          <td><%= f.password_field :password %></td>
        </tr>
        <tr>
          <td><%= f.label :password_confirmation, 'Password confirmation' %></td>
          <td><%= f.password_field :password_confirmation %></td>
        </tr>
        <tr>
          <td><%= f.label :admin, 'Admin' %></td>
          <%= f.hidden_field :admin, value: false %>
          <td><%= f.check_box :admin, {}, true, false %></td>
        </tr>
        <tr>
          <td>&nbsp;</td>
          <td><%= f.submit "Register" %></td>
        <tr>
      </table>
    <% end %>
  </div>
