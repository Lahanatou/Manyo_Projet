<!DOCTYPE html>
<html>
  <head>
    <title>CdpWebManyoTask</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="background-color:LightSlateGrey;font-family:Verdana">
     <header class="shadow p-3 mb-5 bg-white rounded">
       <ul class="nav justify-content-center bg-blue">
       <% if logged_in? %>
       <li>
           <%= link_to 'Task details', tasks_path ,class:'fs-20 btn btn-outline-dark'%>
         </li>
         <li>
           <%= link_to 'Ma page', user_path(current_user.id) ,class:'btn fs-20 btn-outline-dark'%>
         </li>
         <li>
           <%= link_to 'Log out', session_path(current_user.id), method: :delete, data: {confirm: 'Are you sure you want to log out?'} ,class:'btn fs-20 btn-outline-dark'%>
         </li>
           <% if current_user.admin?%>
           <li>
             <%= link_to 'Management', admin_users_path ,class:'btn fs-20 btn-outline-dark'%>
           </li>
         <% end %>
     <% else %>
       <li>
         <%= link_to 'User registration', new_user_path ,class:'btn fs-20'%>
       </li>
       <li>
         <%= link_to 'Login', new_session_path,class:'btn fs-20' %>
       </li>
     <% end %>
       </ul>
     </header>
     <%= yield %>
   </body>
</html>
